{
  "name": "archaeologist-service",
  "version": "0.0.1",
  "description": "Service used to perform jobs in the Sarcophagus ecosystem",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development nodemon --watch 'src/**' index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "NODE_ENV=production NODE_PATH=./build node --experimental-specifier-resolution=node build/src/index.js",
    "start:test": "NODE_ENV=production NODE_PATH=./build node --experimental-specifier-resolution=node build/src/test.js",
    "start:debug": "DEBUG=libp2p:* NODE_ENV=production NODE_PATH=./build node build/src/index.js",
    "peer-id-gen": "node ./src/scripts/peer-id-gen.js",
    "test": "node ./test.js",
    "test:all": "node ./test-all.js"
  },
  "license": "MIT",
  "dependencies": {
    "@chainsafe/libp2p-noise": "^6.2.0",
    "@koush/wrtc": "^0.5.3",
    "@libp2p/bootstrap": "^1.0.6",
    "@libp2p/floodsub": "^1.0.6",
    "@libp2p/kad-dht": "^1.0.16",
    "@libp2p/mplex": "^1.1.0",
    "@libp2p/tcp": "^1.0.11",
    "@libp2p/webrtc-direct": "^2.0.1",
    "@libp2p/webrtc-star": "^2.0.1",
    "@libp2p/webrtc-star-signalling-server": "^2.0.1",
    "@libp2p/websockets": "^1.0.9",
    "@types/node": "^18.0.0",
    "dotenv": "^16.0.1",
    "ethers": "^5.6.9",
    "jsonfile": "^6.1.0",
    "libp2p": "^0.37.2",
    "peer-id": "^0.16.0"
  },
  "devDependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.1.1",
    "nodemon": "^2.0.18",
    "rollup-plugin-polyfill-node": "^0.10.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": ">=16.13.0"
  }
}
